<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:id="@+id/ll_bottom_bar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1">
        <!--首页-->
        <LinearLayout
            android:id="@+id/ll_bottom_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">
            <!--图标-->
            <ImageView
                android:id="@+id/iv_bottom_home"
                android:layout_width="22dp"
                android:layout_height="27dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bottom_tab_home_focus" />
            <!--图标-->
            <TextView
                android:id="@+id/tv_bottom_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/home"
                android:textColor="@color/main_bg"
                android:textSize="10sp" />
        </LinearLayout>
        <!--学习-->
        <LinearLayout
            android:id="@+id/ll_bottom_study"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_study"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bottom_tab_study_unfocus" />

            <TextView
                android:id="@+id/tv_bottom_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/study"
                android:textColor="@color/tabbar_text_unselect"
                android:textSize="10sp" />
        </LinearLayout>
        <!--线上课程-->
        <LinearLayout
            android:id="@+id/ll_bottom_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_course"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bottom_tab_course_unfocus" />

            <TextView
                android:id="@+id/tv_bottom_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/online_course"
                android:textColor="@color/tabbar_text_unselect"
                android:textSize="10sp" />
        </LinearLayout>
        <!--错题本-->
        <LinearLayout
            android:id="@+id/ll_bottom_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_book"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bottom_tab_book_unfocus" />

            <TextView
                android:id="@+id/tv_bottom_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/error_book"
                android:textColor="@color/tabbar_text_unselect"
                android:textSize="10sp" />
        </LinearLayout>
        <!--我的-->
        <LinearLayout
            android:id="@+id/ll_bottom_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_mine"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bottom_tab_mine_unfocus" />

            <TextView
                android:id="@+id/tv_bottom_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/my"
                android:textColor="@color/tabbar_text_unselect"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>