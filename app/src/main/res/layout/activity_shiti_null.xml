<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.TBellLookNoticeActivity">

    <!-- 包含其他视图的 LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/bar_top" />

        <ImageView
            android:id="@+id/fiv_auto_study_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:src="@drawable/autostudynull"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/fiv_up_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:src="@drawable/upnull"
            android:visibility="gone"/>

    </LinearLayout>

    <!--按钮-->
    <Button
        android:id="@+id/btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/blue_btn_bg"
        android:text="在线训练"
        android:textColor="@color/white"
        android:textSize="22sp" />

</RelativeLayout>