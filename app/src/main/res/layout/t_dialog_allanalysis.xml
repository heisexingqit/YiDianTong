<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fll_allanalysis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half8_transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:translationY="-40dp"
        >

        <ImageView
            android:id="@+id/fiv_ztfx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ztfx" />

        <ImageView
            android:id="@+id/fiv_qsfx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/qsfx" />

        <ImageView
            android:id="@+id/fiv_tcxq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/tcxq" />

    </LinearLayout>


</RelativeLayout>