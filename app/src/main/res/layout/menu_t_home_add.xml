<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_select_bg"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:padding="2dp"
        android:showDividers="middle">
        <!--分割线显示要设置showDividers和divider两个属性才行-->

        <TextView
            android:id="@+id/tv_add_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="创建授课包"
            android:textColor="@color/gray_text" />


        <TextView
            android:id="@+id/tv_my_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="我的授课包"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_add_learnPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="创建导学案+布置"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_add_weike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="创建微课+布置"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_add_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="创建作业+布置"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_select_learnPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="选导学案布置"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_select_weike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="选微课布置"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_select_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="选卷布置作业"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_camera_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="拍照布置作业"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_add_read_aloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="发布朗读任务"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_add_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="发布通知"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_add_announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_select_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="发布公告"
            android:textColor="@color/gray_text" />

    </LinearLayout>
</LinearLayout>