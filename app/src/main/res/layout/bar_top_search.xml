<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 顶栏  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FF67C5CB"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <!--左部-->

        <com.example.yidiantong.View.ClickableImageView
            android:id="@+id/iv_folder"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:src="@drawable/folder" />

        <ImageView
            android:id="@+id/iv_folder_ball"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="-18dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/red_ball"
            android:visibility="invisible" />
        <!--中部搜索框-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#EFEFF4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/search_et_bg">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/search_icon" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/plan_homework"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:text="@string/search"
                android:textColor="#168EE9" />
        </LinearLayout>

        <!--右部-->
        <ImageView
            android:id="@+id/iv_search_select"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:src="@drawable/search_select" />

    </LinearLayout>

</LinearLayout>