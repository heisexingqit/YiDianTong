<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.TRemoveControlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tcontrol_top_bg"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/ftv_rc_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="下课"
            android:textColor="@color/draw_color17"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fiv_rc_skbcd"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/skbcd" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/fib_rc_tiwen"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:padding="1dp"
                android:src="@drawable/tiwen1" />

            <ImageButton
                android:id="@+id/fib_rc_suiji"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:padding="1dp"
                android:src="@drawable/suiji1" />

            <ImageButton

                android:id="@+id/fib_rc_qiangda"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:padding="1dp"
                android:src="@drawable/qiangda1" />


        </GridLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:background="@color/light_gray2" />

        <TextView
            android:id="@+id/ftv_rc_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请在左侧选择互动模式"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/fgl_rc"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="3">

            <ImageView
                android:id="@+id/fiv_rc_left1"
                android:layout_width="60dp"
                android:layout_height="47dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/jszd" />

            <ImageView
                android:id="@+id/fiv_rc_right1"
                android:layout_width="60dp"
                android:layout_height="47dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/dtfx" />

            <ImageView
                android:id="@+id/fiv_rc_left2"
                android:layout_width="60dp"
                android:layout_height="47dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/dtxq" />

            <ImageView
                android:id="@+id/fiv_rc_right2"
                android:layout_width="60dp"
                android:layout_height="47dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/closetw" />

            <TextView
                android:id="@+id/ftv_rc_bottom"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="18sp" />

        </GridLayout>

    </LinearLayout>


    <!-- 分割线 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_remove_main"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="330dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintWidth_percent="0.5"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/fiv_rc_one"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/one_a"
                    app:layout_constraintHeight_percent="0.28"
                    app:layout_constraintWidth_percent="0.8" />

                <ImageView
                    android:id="@+id/fiv_rc_two"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_below="@+id/fiv_rc_one"
                    android:adjustViewBounds="true"
                    android:src="@drawable/two_a"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/fiv_rc_three"
                    app:layout_constraintHeight_percent="0.38"
                    app:layout_constraintTop_toBottomOf="@+id/fiv_rc_one"
                    app:layout_constraintWidth_percent="0.26" />

                <ImageView
                    android:id="@+id/fiv_rc_three"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/three_a"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.28"
                    app:layout_constraintWidth_percent="0.8" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/fiv_rc_four"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/four_a"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.43"
                    app:layout_constraintWidth_percent="0.8" />

                <ImageView
                    android:id="@+id/fiv_rc_five"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/five_a"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.43"
                    app:layout_constraintWidth_percent="0.8" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fiv_rc_six"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/six_a"
                    android:translationY="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/fiv_rc_eight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.8" />

                <ImageView
                    android:id="@+id/fiv_rc_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/eight_a"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/fiv_rc_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ten_a"
                    android:translationY="-20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fiv_rc_eight"
                    app:layout_constraintWidth_percent="0.8" />


                <ImageView
                    android:id="@+id/fiv_rc_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/seven_a"
                    android:translationX="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fiv_rc_eight"
                    app:layout_constraintHeight_percent="0.64"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <ImageView
                    android:id="@+id/fiv_rc_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/nine_a"
                    android:translationX="-20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.64"
                    app:layout_constraintStart_toEndOf="@+id/fiv_rc_eight"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fiv_rc_stpz"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/stpz" />

        <ImageView
            android:id="@+id/fiv_rc_jrdm"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/jrdm" />

        <ImageView
            android:id="@+id/fiv_rc_ckxq"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/ckxq" />

    </LinearLayout>

</LinearLayout>