<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TRemoveControlActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/tcontrol_top_bg">

        <TextView
            android:id="@+id/ftv_rc_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="下课"
            android:textColor="@color/draw_color17"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fiv_rc_skbcd"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/skbcd" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/fib_rc_tiwen"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:src="@drawable/tiwen1"
            android:padding="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>
        <ImageButton
            android:id="@+id/fib_rc_suiji"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"
            android:src="@drawable/suiji1"
            android:padding="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>
        <ImageButton
            android:id="@+id/fib_rc_qiangda"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center"
            android:src="@drawable/qiangda1"
            android:padding="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_rowSpan="3"
            android:layout_width="2dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:background="@color/light_gray2" />
        <TextView
            android:layout_rowSpan="3"
            android:layout_gravity="center"
            android:text="请在左侧选择互动模式"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </GridLayout>

    <!-- 分割线 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fiv_rc_one"
                android:layout_width="147dp"
                android:layout_height="82dp"
                android:src="@drawable/one_a" />

            <ImageView
                android:id="@+id/fiv_rc_two"
                android:layout_width="47dp"
                android:layout_height="119dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/two_a" />

            <ImageView
                android:id="@+id/fiv_rc_three"
                android:layout_width="147dp"
                android:layout_height="82dp"
                android:src="@drawable/three_a" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fiv_rc_four"
                android:layout_width="147dp"
                android:layout_height="127dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/four_a" />

            <ImageView
                android:id="@+id/fiv_rc_five"
                android:layout_width="147dp"
                android:layout_height="127dp"
                android:src="@drawable/five_a"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fiv_rc_six"
                android:layout_width="188dp"
                android:layout_height="88dp"
                android:src="@drawable/six_a"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/fiv_rc_eight"
                android:layout_marginBottom="107dp"/>

            <ImageView
                android:id="@+id/fiv_rc_eight"
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:src="@drawable/eight_a"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/fiv_rc_ten"
                android:layout_width="188dp"
                android:layout_height="88dp"
                android:src="@drawable/ten_a"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fiv_rc_eight"
                android:layout_marginTop="107dp"/>


            <ImageView
                android:id="@+id/fiv_rc_seven"
                android:layout_width="88dp"
                android:layout_height="188dp"
                android:src="@drawable/seven_a"
                app:layout_constraintRight_toRightOf="@+id/fiv_rc_eight"
                android:layout_marginRight="107dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/fiv_rc_nine"
                android:layout_width="88dp"
                android:layout_height="188dp"
                android:src="@drawable/nine_a"
                app:layout_constraintLeft_toLeftOf="@+id/fiv_rc_eight"
                android:layout_marginLeft="107dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/fiv_rc_stpz"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/stpz" />
            <ImageView
                android:id="@+id/fiv_rc_jrdm"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/jrdm" />
            <ImageView
                android:id="@+id/fiv_rc_ckxq"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/ckxq" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>