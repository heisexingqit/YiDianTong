<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.THomeworkAddPickActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.example.yidiantong.View.ClickableImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:src="@drawable/left_ex" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:background="@drawable/t_homework_add_border"
            android:orientation="horizontal"
            android:padding="1dp">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/t_homework_add_pick"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="添加试题"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/t_homework_add_white"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="调整顺序"
                android:textColor="@color/t_blue" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/t_homework_add_white"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="布置作业"
                android:textColor="@color/t_blue" />

        </LinearLayout>

        <com.example.yidiantong.View.ClickableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:src="@drawable/t_homework_add_filter" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebedec">

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="(已选择0)" />

        <com.example.yidiantong.View.ClickableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:paddingEnd="10dp"
            android:src="@drawable/add_homework" />

    </RelativeLayout>
</LinearLayout>