<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/rl_main"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <com.example.yidiantong.View.CustomDraw
                android:id="@+id/CustomDraw"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="#989898">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/toggleDrawingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:background="@drawable/image_edit_pen_on"
                    android:button="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/moveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_edit_move"
                    android:button="@null" />

            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1">-->
<!--                <ImageButton-->
<!--                    android:id="@+id/zoomInButton"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/image_edit_big"/>-->

<!--            </LinearLayout>-->

<!--            <LinearLayout-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1">-->
<!--                <ImageButton-->
<!--                    android:id="@+id/zoomOutButton"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/image_edit_small"/>-->

<!--            </LinearLayout>-->


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btnRotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_edit_rotate"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_edit_undo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_edit_clean" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <Button
                android:id="@+id/image_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/t_homework_report"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:text="取消"/>
            <Button
                android:id="@+id/image_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/t_homework_report"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:text="保存"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_submitting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:background="@color/half_transparent">

        <LinearLayout
            android:layout_width="150dp"
            android:background="@drawable/submit_loading_bg"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/pb_submitting"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="35dp"
                android:indeterminateTint="@color/white"
                android:layout_height="35dp" />
            <TextView
                android:id="@+id/tv_submitting"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="图片正在保存"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ColorAndStroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_ColorAndStroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            android:background="@color/half_transparent"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/ll_ColorAndStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:padding="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="设置"
                        android:textSize="15sp" />
                    <!-- 关闭按钮 -->
                    <ImageButton
                        android:id="@+id/close_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/white"
                        android:src="@drawable/x"
                        android:textSize="15sp" />
                </RelativeLayout>

                <!-- 第一行按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:text="粗细"/>

                    <RadioGroup
                        android:id="@+id/radio_group_border"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/btn_border1"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:textSize="15sp"
                            android:text="极细"
                            android:background="@drawable/btn_border"
                            android:textColor="@drawable/radio_button_text_color"
                            android:button="@null"/>

                        <!-- RadioButton1 -->
                        <RadioButton
                            android:id="@+id/btn_border2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:text="细"
                            android:textColor="@drawable/radio_button_text_color"
                            android:background="@drawable/btn_border"
                            android:button="@null"/>

                        <!-- RadioButton2 -->
                        <RadioButton
                            android:id="@+id/btn_border3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:text="中"
                            android:textColor="@drawable/radio_button_text_color"
                            android:checked="true"
                            android:background="@drawable/btn_border"
                            android:button="@null"/>

                        <!-- RadioButton3 -->
                        <RadioButton
                            android:id="@+id/btn_border4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="粗"
                            android:textColor="@drawable/radio_button_text_color"
                            android:background="@drawable/btn_border"
                            android:button="@null"/>
                    </RadioGroup>
                </LinearLayout>

                <!-- 第二行按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:text="颜色"/>


                    <RadioGroup
                        android:id="@+id/radio_group_color"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- RadioButton1 -->
                        <RadioButton
                            android:id="@+id/btn_color_red"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:text="红"
                            android:checked="true"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@drawable/radio_button_text_color"
                            android:background="@drawable/btn_color_red"
                            />

                        <!-- RadioButton2 -->
                        <RadioButton
                            android:id="@+id/btn_color_yellow"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="黄"
                            android:background="@drawable/btn_color_yellow"
                            android:textColor="@drawable/radio_button_text_color"
                            android:button="@null"/>

                        <!-- RadioButton3 -->
                        <RadioButton
                            android:id="@+id/btn_color_blue"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="蓝"
                            android:background="@drawable/btn_color_blue"
                            android:textColor="@drawable/radio_button_text_color"
                            android:button="@null"/>

                        <!-- RadioButton4 -->
                        <RadioButton
                            android:id="@+id/btn_color_green"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="绿"
                            android:background="@drawable/btn_color_green"
                            android:textColor="@drawable/radio_button_text_color"
                            android:button="@null"/>

                        <!-- RadioButton5 -->
                        <RadioButton
                            android:id="@+id/btn_color_black"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="黑"
                            android:background="@drawable/btn_color_black"
                            android:textColor="@drawable/radio_button_text_color"
                            android:button="@null"/>
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>


        </FrameLayout>
    </RelativeLayout>


</RelativeLayout>
