<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="9dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <!--上大块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--左中块-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--上小块，包含两部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_width"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/homework_icon" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="作业"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_top_icon1"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="-6dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/new_icon" />

                    <ImageView
                        android:id="@+id/iv_top_icon2"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="-3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/new_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="测试拍照布置作业"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--下小块，仅组件-->
            <TextView
                android:id="@+id/tv_second_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="高中数学    截止时间：2022.08"
                android:textSize="15sp" />
        </LinearLayout>
        <!--右中块-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/tv_is_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/live_red"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="直播中"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="2022.08"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <!--下大块-->
    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="初中数学(人教版2013)/七年级上册/有理数/正数和复数/"
        android:textSize="14sp" />

</LinearLayout>