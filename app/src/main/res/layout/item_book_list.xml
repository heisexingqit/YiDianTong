<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fll_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/book_item_bg"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/fiv_book_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            tools:src="@drawable/yuwen_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/ftv_book_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/yuwen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/fiv_book_redball"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/red_ball"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/ftv_book_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="0道错题" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>