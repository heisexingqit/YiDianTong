<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/black" /> <!-- 选中状态的背景颜色为红色 -->
            <stroke
                android:width="1dp"
                android:color="#858585" /> <!-- 选中状态的边框颜色为黑色，宽度为2dp -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" /> <!-- 默认状态的背景颜色为白色 -->
            <stroke
                android:width="1dp"
                android:color="#858585" /> <!-- 默认状态的边框颜色为黑色，宽度为2dp -->
        </shape>
    </item>
</selector>