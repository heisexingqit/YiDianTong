<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:background="@color/draw_panel_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_paint"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/image_edit_pen"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/btn_move"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/image_edit_move_on"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/btn_undo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/image_edit_undo"
            android:textColor="@color/white"
            android:textSize="@dimen/image_edit_text_size" />

        <ImageView
            android:id="@+id/btn_clean"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/image_edit_clean"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/btn_stickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/stickers"
            android:textColor="@color/white"
            android:textSize="@dimen/image_edit_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/filter"
            android:textColor="@color/white"
            android:textSize="@dimen/image_edit_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/crop"
            android:textColor="@color/white"
            android:textSize="@dimen/image_edit_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_rotate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/image_edit_rotate"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/text"
            android:textColor="@color/white"
            android:textSize="@dimen/image_edit_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/beauty"
            android:textColor="@color/white"
            android:textSize="@dimen/image_edit_text_size"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>

